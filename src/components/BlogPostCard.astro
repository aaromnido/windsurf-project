---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  category: string;
  heroImage: string;
  slug: string;
}

const { title, description, pubDate, category, heroImage, slug } = Astro.props;
---

<article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
  <a href={`/noticias/${slug}/`} class="block">
    <img
      src={heroImage}
      alt={title}
      class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
    />
  </a>
  <div class="p-6">
    <span class="text-sm text-primary bg-primary/10 px-3 py-1 rounded-full">
      {category}
    </span>
    <h3 class="mt-2 text-xl font-semibold line-clamp-2">
      <a href={`/noticias/${slug}/`} class="hover:text-primary">
        {title}
      </a>
    </h3>
    <p class="mt-2 text-gray-600 line-clamp-2">
      {description}
    </p>
    <div class="mt-4 flex items-center text-sm text-gray-500">
      <time datetime={pubDate.toISOString()}>
        {pubDate.toLocaleDateString('es-ES', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </time>
    </div>
  </div>
</article>
