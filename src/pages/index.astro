---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import HeroPostCard from '../components/HeroPostCard.astro';

// Obtener las últimas noticias
const posts = (await getCollection('noticias'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 12);
---

<BaseLayout title="EVCars - Noticias, pruebas y reviews de coches eléctricos">
  <!-- Hero Section -->
  <section class="bg-white pt-4">
    <div class="container mx-auto p-8 bg-black rounded-2xl">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {/* Primer HeroPostCard - ocupa 2/3 en lg */}
        <div class="lg:col-span-2">
          {posts.slice(0, 1).map(post => (
            <HeroPostCard
              title={post.data.title}
              description={post.data.description}
              category={post.data.category}
              pubDate={post.data.pubDate}
              heroImage={post.data.heroImage ?? ''}
              slug={post.slug}
              featured={true}
            />
          ))}
        </div>
        
        {/* Dos HeroPostCards - ocupan 1/3 en lg */}
        <div class="flex flex-col gap-6">
          {posts.slice(1, 3).map(post => (
            <HeroPostCard
              title={post.data.title}
              description={post.data.description}
              category={post.data.category}
              pubDate={post.data.pubDate}
              heroImage={post.data.heroImage ?? ''}
              slug={post.slug}
            />
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Latest News Section -->
  <section class="bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold">Últimas Noticias</h2>
        <a href="/noticias" class="text-primary hover:text-primary-dark">
          Ver todas →
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.slice(5, 11).map(post => (
          <article class="bg-white rounded-lg overflow-hidden shadow-md">
            <a href={`/noticias/${post.slug}/`}>
              <img
                src={post.data.heroImage}
                alt={post.data.title}
                class="w-full h-48 object-cover"
              />
            </a>
            <div class="p-6">
              <span class="text-sm text-primary bg-primary/10 px-3 py-1 rounded-full">
                {post.data.category}
              </span>
              <h3 class="mt-2 text-xl font-semibold">
                <a href={`/noticias/${post.slug}/`} class="hover:text-primary">
                  {post.data.title}
                </a>
              </h3>
              <p class="mt-2 text-gray-600 line-clamp-2">
                {post.data.description}
              </p>
              <div class="mt-4 flex items-center text-sm text-gray-500">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
