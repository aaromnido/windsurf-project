---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'noticias'>['data'];

const { title, description, pubDate, updatedDate, heroImage, category } = Astro.props;
---

<BaseLayout title={title} description={description}>
	<article class="container mx-auto px-4 py-8">
		<div class="max-w-4xl mx-auto">
			<header class="mb-8">
				<div class="mb-4">
					<span class="text-sm text-primary bg-primary/10 px-3 py-1 rounded-full">
						{category}
					</span>
				</div>
				<h1 class="text-4xl font-bold mb-4">{title}</h1>
				<div class="text-gray-600 mb-4">
					<FormattedDate date={pubDate} />
					{
						updatedDate && (
							<span>
								{' '}
								<span>•</span>
								{' '}
								Última actualización: <FormattedDate date={updatedDate} />
							</span>
						)
					}
				</div>
			</header>

			<div class="mb-8">
				<div class="relative w-full max-w-[1020px] mx-auto">
					<img
						src={heroImage}
						alt={title}
						class="w-full h-auto max-h-[680px] object-cover rounded-lg shadow-lg"
					/>
				</div>
			</div>

			<div class="prose prose-lg max-w-none">
				<slot />
			</div>
		</div>
	</article>
</BaseLayout>

<style is:global>
	.prose img {
		@apply max-w-[1020px] max-h-[680px] mx-auto rounded-lg shadow-lg object-cover;
	}
</style>
